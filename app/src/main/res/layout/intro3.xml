<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    android:padding="10dp"
    android:gravity="center">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="سفر سلامت!"
        android:textColor="@color/md_white_1000"
        android:textSize="@dimen/intro_header_text"
        android:gravity="center_horizontal"
        android:layout_margin="@dimen/intro_margin"/>

    <ImageView
        android:layout_width="@dimen/intro_icon_size"
        android:layout_height="@dimen/intro_icon_size"
        android:background="@drawable/icons8_system_task_512" />


</LinearLayout>