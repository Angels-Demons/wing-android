<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="activities.Register"
    android:background="@color/md_white_1000"
    android:orientation="vertical"
    android:gravity="center_horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_gravity="start"
        android:gravity="center"
        android:layout_margin="@dimen/login_register_text_margin">

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/md_grey_500"
            android:backgroundTint="@color/md_white_1000"
            android:onClick="closeClicked"
            android:visibility="invisible"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="ثبت نام"
            android:textSize="20dp"
            android:textColor="@color/md_blue_grey_800"
            android:gravity="center"
            android:onClick="languageCheck"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_close_black_24dp"
            android:tint="@color/md_grey_500"
            android:visibility="invisible"
            android:backgroundTint="@color/md_white_1000"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:layout_margin="30dp"
            android:src="@drawable/logo" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_register_text_margin"
            android:text="شماره تلفن"
            android:textColor="@color/md_blue_grey_500"
            android:textSize="16dp" />

        <EditText
            android:id="@+id/phone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/login_register_text_margin"
            android:background="#0000"
            android:hint="09121234567"
            android:inputType="phone"
            android:textColor="@color/md_blue_grey_800"
            android:textColorHint="@color/md_blue_grey_700"
            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center"
            android:visibility="gone">
            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:layout_margin="@dimen/divider"
                android:background="@color/md_grey_300" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/md_blue_grey_500"
                android:text="رمز عبور"
                android:layout_margin="@dimen/login_register_text_margin"/>

            <EditText
                android:id="@+id/password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/login_register_text_margin"
                android:background="#0000"
                android:hint="********"
                android:inputType="textPassword"
                android:textColor="@color/md_blue_grey_800"
                android:textColorHint="@color/md_blue_grey_700"
                android:textSize="16dp" />

            <View
                android:layout_width="match_parent"
                android:layout_height="2dp"
                android:background="@color/md_grey_300"
                android:layout_margin="@dimen/divider"/>

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16dp"
                android:textColor="@color/md_blue_grey_500"
                android:text="تکرار رمز عبور"
                android:layout_margin="@dimen/login_register_text_margin"/>

            <EditText
                android:id="@+id/repeat_password"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPassword"
                android:textColorHint="@color/md_blue_grey_700"
                android:hint="********"
                android:textColor="@color/md_blue_grey_800"
                android:textSize="16dp"
                android:background="#0000"
                android:layout_margin="@dimen/login_register_text_margin"/>
        </LinearLayout>

        <Button
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/divider"
            android:background="@color/colorPrimary"
            android:onClick="registerClicked"
            android:text="ثبت کن"
            android:textColor="@color/md_white_1000"
            android:textSize="20dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:visibility="gone">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:onClick="closeClicked"
                android:text="ورود"
                android:textColor="@color/md_grey_600"
                android:textSize="17dp"
                android:textStyle="bold" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginLeft="4dp"
                android:lines="1"
                android:text="نام کاربری دارید؟"
                android:textColor="@color/md_grey_600"
                android:textSize="16dp" />

        </LinearLayout>

    </LinearLayout>


</LinearLayout>
